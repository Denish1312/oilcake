<UserControl x:Class="DairyManagement.UI.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a2a6c" Offset="0"/>
                <GradientStop Color="#b21f1f" Offset="0.5"/>
                <GradientStop Color="#fdbb2d" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" Width="400" Height="450" VerticalAlignment="Center" 
                HorizontalAlignment="Center" CornerRadius="20" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.3" ShadowDepth="0"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="Dairy Management" FontSize="28" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Please log in to continue" FontSize="14" Foreground="#777" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" Margin="0,0,0,20" Style="{StaticResource ModernTextBox}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                <!-- Note: Simple PasswordBox binding or custom helper is needed for MVVM. 
                     For this demo, I'll use a TextBox but labeled as Password or a custom style. -->
                <PasswordBox x:Name="PassBox" Padding="10" Margin="0,0,0,30" Style="{StaticResource ModernPasswordBox}"/>

                <Button Content="LOGIN" Command="{Binding LoginCommand}" 
                        Style="{StaticResource PrimaryButton}" Height="50" FontSize="16" />
                
                <Grid Margin="0,20,0,0" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Height="4"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
