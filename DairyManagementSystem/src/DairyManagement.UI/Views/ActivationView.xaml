<UserControl x:Class="DairyManagement.UI.Views.ActivationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F2027" Offset="0"/>
                <GradientStop Color="#203A43" Offset="0.5"/>
                <GradientStop Color="#2C5364" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" Width="450" Height="500" VerticalAlignment="Center" 
                HorizontalAlignment="Center" CornerRadius="20" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.3" ShadowDepth="0"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="Software Activation" FontSize="28" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Your software is not activated. Please contact support." 
                           FontSize="14" Foreground="#777" TextAlignment="Center" 
                           TextWrapping="Wrap" Margin="0,0,0,30"/>

                <TextBlock Text="Computer ID" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                <Grid Margin="0,0,0,20">
                    <TextBox Text="{Binding ComputerId}" IsReadOnly="True" Padding="10" Background="#f8f8f8"/>
                    <Button Content="Copy" Command="{Binding CopyIdCommand}" HorizontalAlignment="Right" 
                            Padding="10,0" Style="{StaticResource SecondaryButton}" BorderThickness="0"/>
                </Grid>

                <TextBlock Text="Product Key" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox Text="{Binding ProductKey, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" Margin="0,0,0,30" Style="{StaticResource ModernTextBox}"/>

                <Button Content="ACTIVATE NOW" Command="{Binding ActivateCommand}" 
                        Style="{StaticResource PrimaryButton}" Height="50" FontSize="16" />
                
                <TextBlock Text="One-time activation required for this computer." 
                           FontSize="12" Foreground="#999" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
