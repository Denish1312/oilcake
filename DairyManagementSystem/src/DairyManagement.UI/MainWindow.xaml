<Window x:Class="DairyManagement.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DairyManagement.UI.ViewModels"
        xmlns:views="clr-namespace:DairyManagement.UI.Views"
        mc:Ignorable="d"
        Title="Dairy Management System" 
        Height="768" Width="1366"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Menu Grid.Row="0" Background="#2196F3" Foreground="White" Padding="5"
              Visibility="{Binding IsAuthenticated, Converter={StaticResource BooleanToVisibilityConverter}}">
            <MenuItem Header="_Dashboard" Command="{Binding NavigateToDashboardCommand}"/>
            <MenuItem Header="_Customers" Command="{Binding NavigateToCustomersCommand}"/>
            <MenuItem Header="_Products" Command="{Binding NavigateToProductsCommand}"/>
            <MenuItem Header="_Milk Cycles" Command="{Binding NavigateToMilkCyclesCommand}"/>
            <MenuItem Header="_Settlements" Command="{Binding NavigateToSettlementsCommand}"/>
            <MenuItem Header="_Reports" Command="{Binding NavigateToReportsCommand}"/>
            <MenuItem Header="_Users" Command="{Binding NavigateToUserManagementCommand}" 
                      Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <MenuItem Header="_Logout" Command="{Binding LogoutCommand}" HorizontalAlignment="Right"/>
        </Menu>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <!-- Security Views -->
                <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                    <views:LoginView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ActivationViewModel}">
                    <views:ActivationView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:UserManagementViewModel}">
                    <views:UserManagementView/>
                </DataTemplate>
                
                <!-- Business Views -->
                <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                    <views:DashboardView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:CustomerListViewModel}">
                    <views:CustomerListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:CustomerFormViewModel}">
                    <views:CustomerFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ProductListViewModel}">
                    <views:ProductListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ProductFormViewModel}">
                    <views:ProductFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:MilkCycleListViewModel}">
                    <views:MilkCycleListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:MilkCycleFormViewModel}">
                    <views:MilkCycleFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:SettlementViewModel}">
                    <views:SettlementView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
                    <views:ReportsView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:TransactionFormViewModel}">
                    <views:TransactionFormView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F5F5F5"
                   Visibility="{Binding IsAuthenticated, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" Padding="5,0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentUser, StringFormat='User: {0}'}" Padding="5,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
